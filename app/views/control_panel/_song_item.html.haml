%li.song
  = form_for song_item, url:add_to_playlist_path, remote:true do |f|
    = f.hidden_field :artist
    = f.hidden_field :title
    = f.hidden_field :url
    - unless song_item.id.nil?
      = f.hidden_field :id
    - else
      = f.hidden_field :id, value:"${id}"
    .song_data
      %span.artist= "#{song_item.artist}"
      %span= " - "
      %span.title= "#{song_item.title}"
    = f.submit 'add to playlist', class:"btn btn-info add_to_playlist pull-right"
