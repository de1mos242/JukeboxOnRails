= form_for song_item, url:add_to_playlist_path, remote:true, :html => { :class => "song well"} do |f|
  = f.hidden_field :artist
  = f.hidden_field :title
  = f.hidden_field :url
  = f.hidden_field :id
  .song_data
    %span.artist= "#{song_item.artist}"
    %span= " - "
    %span.title= "#{song_item.title}"
  .actions
    = f.submit 'add to playlist', class:"btn btn-info add_to_playlist pull-right"
