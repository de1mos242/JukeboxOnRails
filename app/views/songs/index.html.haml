%h1 Songs

= form_tag(find_songs_path, class:"form-search") do |form|
  = search_field_tag 'find_query', "", class: "search-query"
  = submit_tag 'find', class: "btn"

%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th Artist
      %th Title
      %th
      
  %tbody
    - @songs.each do |song|
      -if song.downloaded?
        %tr.success
          = render partial: "item", object: song   
      -else
        %tr.info
          = render partial: "item", object: song   
        
