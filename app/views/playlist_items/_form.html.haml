= form_for @playlist_item do |f|
  -if @playlist_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@playlist_item.errors.count, "error")} prohibited this playlist_item from being saved:"
      %ul
        - @playlist_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :song
    = f.text_field :song
  .field
    = f.label :position
    = f.number_field :position
  .actions
    = f.submit 'Save'
